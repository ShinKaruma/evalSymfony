{% extends 'base.html.twig' %}

{% block title %}Hello ListeEquipeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1> Nombre d'équipes : {{lesEquipes | length}} </h1>

    <ul>
        {% for equipe in lesEquipes %}
            <li><a href="{{path('modif_equipe',{id:equipe.id}) }}">{{equipe.getNom()}}--{{equipe.getMascotte()}}--{{equipe.getNbJoueurs}}--{{equipe.getLieu()}}</a></li>
        {% else %}
            Pas d'équipe trouvée
        {% endfor %}
    </ul>
</div>
{% endblock %}
